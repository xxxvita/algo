// Пересекающиеся элементы - уникальное значение.
// Для каждого массива создаётся "хеш"-таблица с отображением его чисел,
// где само число - это его позиция в таком массиве. Чисел известно количество из
// ограницчений по числу элементов. Наличие числа - это значение единица.
// Пробегаясь по слепкам исходных массивов, находим их пересечение.

// Time: O(n)
// mem: O(n+m)
func intersection(nums1 []int, nums2 []int) []int {
    mas1 := make([]int, 1001 + 1)
    mas2 := make([]int, 1001 + 1)

    for _, n := range nums1 {
        mas1[n] = 1
    }

    for _, n := range nums2 {
        mas2[n] = 1
    }

    l := 0

    result := make([]int, 0)
    // [1,2,2,1], [2,2]
    //     [0 1 1 0 ...] [0 0 1]
    // idx: 0 1 2 3       0 1 2
    for l < len(mas1) && l < len(mas2) {
        if mas1[l] == mas2[l] && mas1[l] != 0 {
            result = append(result, l)
        }
        l++
    }

    return result
}
